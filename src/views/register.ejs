<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Register</title>
  <link rel="stylesheet" href="/static/css/style.css" />
</head>
<body>
  <%- include('partials/header', {
    title: 'Inscription',
    bodyClass: 'register-body',
    containerClass: 'register-container',
    headerClass: 'register-header',
    navClass: '',
    showNav: false,
    currentPage: 'register'
  }) %>

  <div class="register-content">
    <div class="card shadow">
      <div class="card-header bg-primary text-white text-center">
        <img src="/static/img/company_logo.png" alt="Auto Presto Logo" class="mb-3" style="max-width: 150px;">
        <h1 class="h4 mb-0">Inscription</h1>
      </div>
      <div class="card-body">
        <% if (error) { %>
          <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle"></i>
            <%= error %>
          </div>
        <% } %>
        <form action="/register" method="post">
          <div class="form-group">
            <label for="username">
              <i class="fas fa-user"></i> Nom d'utilisateur
            </label>
            <input type="text" class="form-control" id="username" name="username" required>
          </div>
          <div class="form-group">
            <label for="password">
              <i class="fas fa-lock"></i> Mot de passe
            </label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            <i class="fas fa-user-plus"></i> S'inscrire
          </button>
          <div class="text-center mt-3">
            <a href="/login" class="text-muted">
              <i class="fas fa-arrow-left"></i> Retour Ã  la connexion
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('partials/footer', {
    showScripts: false,
    customScripts: []
  }) %>
</body>
</html>
